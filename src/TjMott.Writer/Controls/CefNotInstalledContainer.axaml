<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TjMott.Writer.Controls.CefNotInstalledContainer">
	<Grid RowDefinitions="Auto,*">
		<TextBlock FontSize="24" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,40">Document Editing Not Available</TextBlock>
		<StackPanel Grid.Row="1">
			<StackPanel.Styles>
				<Style Selector="TextBlock">
					<Setter Property="TextWrapping" Value="Wrap" />
					<Setter Property="FontSize" Value="18" />
					<Setter Property="Margin" Value="0,0,0,20" />
				</Style>
			</StackPanel.Styles>
			<TextBlock>Chromium Embedded Framework (CEF) is not installed into the TJ Mott's Writer application directory. Document viewing/editing is not available.</TextBlock>
			<TextBlock>Click the install button below to install CEF.</TextBlock>
			<Button Content="Install CEF" HorizontalAlignment="Center" FontSize="18" Margin="10" Click="InstallButton_Click" />
		</StackPanel>
		
	</Grid>
</UserControl>
