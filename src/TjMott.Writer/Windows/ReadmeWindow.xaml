<Window x:Class="TjMott.Writer.Windows.ReadmeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:htmlRenderer="clr-namespace:TheArtOfDev.HtmlRenderer.WPF;assembly=HtmlRenderer.WPF"
        xmlns:local="clr-namespace:TjMott.Writer.Windows"
        mc:Ignorable="d" Loaded="Window_Loaded" Closing="Window_Closing"
        Title="Readme" Height="450" Width="800">
    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}" />
    </Window.Style>
    <Grid>
        <Border BorderBrush="DarkGray" Grid.Row="2" BorderThickness="1">
            <htmlRenderer:HtmlPanel x:Name="htmlRenderer" Margin="5"
                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto" />
        </Border>
    </Grid>
</Window>
