<Window x:Class="TjMott.Writer.Windows.MarkdownDocumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:TjMott.Writer.Views"
        xmlns:local="clr-namespace:TjMott.Writer.Windows"
        UseLayoutRounding="True" WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded" Closing="Window_Closing"
        mc:Ignorable="d"
        Title="Note Browser" Height="450" Width="800">
    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}" />
    </Window.Style>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="Edit">
                <MenuItem Header="Save Changes" Command="{Binding SaveCommand}" />
                <MenuItem Header="Revert Changes" Command="{Binding RevertCommand}" />
                <MenuItem Header="Rename" Command="{Binding RenameCommand}" />
                <MenuItem Header="Set Categories" Command="{Binding EditCategoriesCommand}" />
                <MenuItem Header="Delete" Command="{Binding DeleteCommand}" />
                <MenuItem Header="Close" Click="closeMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="Markdown Reference" Click="MarkdownReferenceMenuItem_Click" />
            </MenuItem>
        </Menu>

        <TabControl Grid.Row="1">
            <TabItem Header="View">
                <views:MarkdownDocumentView />
            </TabItem>
            <TabItem Header="Edit">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBox AcceptsReturn="True" AcceptsTab="True" Text="{Binding Model.MarkdownText, UpdateSourceTrigger=PropertyChanged}"
                             KeyDown="TextBox_KeyDown" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible"
                             FontSize="{Binding ElementName=fontSizeSlider, Path=Value}"/>
                    <StackPanel Grid.Row="1" HorizontalAlignment="Right" Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center">
                            <Run Text="Font Size " />
                            <Run Text="{Binding ElementName=fontSizeSlider, Path=Value}" />
                        </TextBlock>
                        <Slider x:Name="fontSizeSlider" Margin="10,3,0,3" Minimum="8" Maximum="40" SmallChange="1" LargeChange="4"
                                Width="100" Value="12" ToolTip="Set Font Size" TickFrequency="1" IsSnapToTickEnabled="True" />
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
        
    </Grid>
</Window>
