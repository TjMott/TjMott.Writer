<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TjMott.Writer.Views.PasswordInputView"
		WindowStartupLocation="CenterOwner"
        Title="Password Required">
	<Grid RowDefinitions="*,Auto,Auto,*" ColumnDefinitions="Auto,*">
		<TextBlock Text="Password Required" Grid.ColumnSpan="2" />
		
		<TextBlock Text="Password" Grid.Row="1" />
		<TextBox Grid.Row="1" Grid.Column="1" PasswordChar="*" x:Name="passwordBox" />
		
		<TextBlock Text="Confirm Password" Grid.Row="2" />
		<TextBox Grid.Row="2" Grid.Column="1" PasswordChar="*" x:Name="confirmPasswordBox"  />
		
		<StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal">
			<Button Content="OK"
					Command="{Binding OkCommand}" 
					CommandParameter="{Binding $parent[Window]}" />
			<Button Content="Cancel"
					Command="{Binding CancelCommand}"
					CommandParameter="{Binding $parent[Window]}"/>
		</StackPanel>
	</Grid>
</Window>
