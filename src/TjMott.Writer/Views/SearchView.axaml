<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TjMott.Writer.Views.SearchView">
	<Grid RowDefinitions="Auto,Auto,*,Auto" ColumnDefinitions="Auto,*">
		<TextBlock Text="Search Term:" VerticalAlignment="Center" />
		<TextBox Grid.Column="1" Margin="5" Text="{Binding SearchTerm}" />

		<TextBlock Text="{Binding Status}" Grid.Row="1" Grid.ColumnSpan="2" />

		<DataGrid x:Name="searchResultsGrid" Grid.Row="2" Grid.ColumnSpan="2" AutoGenerateColumns="False" IsReadOnly="True">
			
		</DataGrid>
	</Grid>
</UserControl>
