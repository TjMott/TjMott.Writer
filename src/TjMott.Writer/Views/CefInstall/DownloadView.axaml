<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TjMott.Writer.Views.CefInstall.DownloadView">
	<Grid RowDefinitions="*,Auto">
		<TextBlock TextWrapping="Wrap" Text="{Binding StatusMessage}" />

		<StackPanel Grid.Row="1" Classes="dialogButtonPanel">
			<Button Content="Ok" Command="{Binding Ok}" IsEnabled="{Binding OkButtonEnabled}" />
			<Button Content="Cancel" Command="{Binding Cancel}" IsEnabled="{Binding CancelButtonEnabled}" />
		</StackPanel>

	</Grid>
</UserControl>
