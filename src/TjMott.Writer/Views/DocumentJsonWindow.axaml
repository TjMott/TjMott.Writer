<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TjMott.Writer.Views.DocumentJsonWindow"
        Title="DocumentJsonWindow">
	<Grid RowDefinitions="Auto,*">
		<Menu>
			<MenuItem Header="Debug">
				<MenuItem Header="Reload" Click="ReloadMenuItem_Click" />
				<MenuItem Header="Save (DANGEROUS!)" Click="SaveMenuItem_Click" IsEnabled="False" />
				<MenuItem Header="Close" Click="CloseMenuItem_Click" />
			</MenuItem>
		</Menu>
		<TextBox x:Name="jsonTextBox" Grid.Row="1" AcceptsReturn="True" AcceptsTab="True" />
	</Grid>
</Window>
